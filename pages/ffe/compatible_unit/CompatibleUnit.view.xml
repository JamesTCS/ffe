<core:View 	xmlns="sap.ui.commons"
xmlns:core="sap.ui.core" 
xmlns:l="sap.ui.layout"
xmlns:t="sap.ui.table"
xmlns:html="http://www.w3.org/1999/xhtml"
controllerName="pge.ffe.pages.ffe.compatible_unit.CompatibleUnit"  >

	<l:VerticalLayout>
		<l:HorizontalLayout>
			<Label text="Select Area:" class="left10" /> 
			<DropdownBox class="left10">
				<items>
					<core:ListItem text="Gas" />
					<core:ListItem text="Electric" />
					<core:ListItem text="Trench" />
				</items>
			</DropdownBox>
			
		</l:HorizontalLayout>
		
		<l:VerticalLayout class="top25">
			<l:HorizontalLayout>
				<Label text="CU ID:" class="spacing" /><TextField class="right10 top10" />
				<Label text="Status:" class="spacing left25" /><TextField class="right10 top10" />
				<Label text="Valid To:" class="spacing left25" /><TextField class="right10 top10" />
			</l:HorizontalLayout>
			<l:HorizontalLayout>
				<Label text="Created BY:" class="spacing" /><TextField class="right10 top10" />
				<Label text="Task List Group:" class="spacing left25" /><TextField class="right10 top10" />
				<Label text="Valid From:" class="spacing left25" /><TextField class="right10 top10" />
			</l:HorizontalLayout>
			
		</l:VerticalLayout>
		
		<l:HorizontalLayout class="top25">
			<Button text="Search" />  <Button text="Display" class="left10" /> <Button text="Change" class="left10" press="toChange" /> <Button text="Create" class="left10" press="onCreate"/>
		</l:HorizontalLayout>
		<t:Table class="top10" >
			<t:columns>
				<t:Column name="test"><t:label><Label text="col1"/></t:label></t:Column>
				<t:Column name="test"></t:Column>
			</t:columns>
		</t:Table>
	</l:VerticalLayout>

</core:View>