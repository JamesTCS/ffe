	<html:h1 class="center" >Compatible Unit</html:h1>
	<l:VerticalLayout>
		<l:HorizontalLayout>
			<Label text="Select Area:" class="left10" /> 
			<DropdownBox class="left10">
				<items>
					<core:ListItem text="Gas" />
					<core:ListItem text="Electric" />
					<core:ListItem text="Trench" />
				</items>
			</DropdownBox>
			
		</l:HorizontalLayout>
		
		<l:VerticalLayout class="top25">
			<l:HorizontalLayout>
				<Label text="CU ID:" class="spacing" /><TextField class="right10 top10" />
				<Label text="Status:" class="spacing left25" /><TextField class="right10 top10" />
				<Label text="Valid To:" class="spacing left25" /><TextField class="right10 top10" />
			</l:HorizontalLayout>
			<l:HorizontalLayout>
				<Label text="Created BY:" class="spacing" /><TextField class="right10 top10" />
				<Label text="Task List Group:" class="spacing left25" /><TextField class="right10 top10" />
				<Label text="Valid From:" class="spacing left25" /><TextField class="right10 top10" />
			</l:HorizontalLayout>
			
		</l:VerticalLayout>
		
		<!-- Old Buttons -->
		<l:HorizontalLayout class="top25">
			<Button text="Search" icon="/images/search_small.png" />  
			<Button text="Clear" class="left10" />
			<Button text="Display" icon="/images/view_small.png" class="left25" />
			<Button text="Change" icon="/images/edit_small.png" class="left10" press="toChange" /> 
			<Button text="Create" icon="/images/new_small.png" class="left10" press="toCreate"/>
		</l:HorizontalLayout>
		
