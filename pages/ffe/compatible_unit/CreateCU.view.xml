<core:View xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns:commons="sap.ui.commons"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="pge.ffe.pages.ffe.compatible_unit.CreateCU">
	<Panel>
	<html:h1 class="center">Compatible Unit - Create</html:h1>
	<l:HorizontalLayout class="float-right">
		<Button text="Save" tooltip="Save" press="save" class="right10 saveButton" icon="images/save.png"/>
		<Button text="Back" tooltip="Back" press="back" class="right10 backButton" icon="images/exit.png"/>
		<Button text="Save &amp; Exit" press="saveAndExit" class="right10 saveExitButton orangeButton"/>
	</l:HorizontalLayout>
	
	
		<form:Form>
			<form:formContainers>
				<form:FormContainer>
					<form:formElements>
						<form:FormElement class="formMargin" label="CU ID">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Label text="Description" style="text-align:right">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Label>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Label text="Status" style="text-align:right">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Label>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Base Unit">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Label text="Valid From: " style="text-align:right">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Label>
								<commons:DatePicker>
								</commons:DatePicker>
								<commons:Label text="Valid To: " style="text-align:right">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Label>
								<commons:DatePicker>
								</commons:DatePicker>
								<commons:Label>
								</commons:Label>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Task List">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Button tooltip="Create Task List" text="Create" press="toCreateTaskList" icon="images/new_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button tooltip="Change Task List" text="Change" icon="images/edit_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button tooltip="Display Task List" text="Display" icon="images/view_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Ref Obj">
							<commons:TextField>
								<commons:layoutData>
									<l:GridData span="L2 M2 S2"></l:GridData>
								</commons:layoutData>
							</commons:TextField>
						</form:FormElement>
						<form:FormElement label="Function Location">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Button tooltip="Create Function Location" text="Create" press="toCreateFunctionalLoc" icon="images/new_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button tooltip="Change Function Location" text="Change" icon="images/edit_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button tooltip="Display Function Location" text="Display" icon="images/edit_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button class="blueButton" text="Where Used">
									<commons:layoutData>
										<l:GridData span="L1 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:Button>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Equipment">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Button tooltip="Create Equipment" text="Create" press="toCreateEquipment" icon="images/new_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button tooltip="Change Equipment" text="Change" icon="images/edit_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button tooltip="Display Equipment" text="Display" icon="images/view_small.png">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button class="blueButton" text="Where Used">
									<commons:layoutData>
										<l:GridData span="L1 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:Button>
							</form:fields>
						</form:FormElement>
					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
			<form:layout>
				<form:ResponsiveGridLayout id="L1" columnsL="1"/>
			</form:layout>
		</form:Form>
		<table:Table>
			<table:title>
				<commons:TextView text="Sub-Items"></commons:TextView>
			</table:title>
			<table:columns>
				<table:Column>
					<commons:Label text="CU Number"></commons:Label>
				</table:Column>
				<table:Column>
					<commons:Label text="Description"></commons:Label>
				</table:Column>
				<table:Column>
					<commons:Label text="NR"></commons:Label>
				</table:Column>
				<table:Column>
					<commons:Label text="Quantity"></commons:Label>
				</table:Column>
			</table:columns>
		</table:Table>
		<commons:Button text="Add Item"></commons:Button>
		<commons:Button text="Delete Item"></commons:Button>
	</Panel>
	
</core:View>