<core:View xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns:commons="sap.ui.commons"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="pge.ffe.pages.ffe.compatible_unit.create.CreateCU">
	
	<html:h1 class="center">Create Compatible Unit</html:h1>
	<l:HorizontalLayout class="float-right">
		<Button text="Back" press="back" class="right10"/>
		<Button text="Save" press="save" class="right10"/>
		<Button text="Save &amp; Exit" press="saveAndExit" class="right10"/>
	</l:HorizontalLayout>
	
	<Panel>
		<form:Form>
			<form:formContainers>
				<form:FormContainer>
					<form:formElements>
						<form:FormElement label="CU ID">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Label text="Description" style="text-align:right">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Label>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Label text="Status" style="text-align:right">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Label>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Label text="Valid From" style="text-align:right">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Label>
								<commons:DatePicker>
								</commons:DatePicker>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Base Unit">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Label>
									<commons:layoutData>
										<l:GridData span="L4 M4 S4"></l:GridData>
									</commons:layoutData>
								</commons:Label>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Task List">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Button text="Create" press="toCreateTaskList">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Change">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Display">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="CU Classification" press="toCreateClassification" >
									<commons:layoutData>
										<l:GridData span="L2 M3 S5"></l:GridData>
									</commons:layoutData>
								</commons:Button>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Ref Obj">
							<commons:TextField>
								<commons:layoutData>
									<l:GridData span="L2 M2 S2"></l:GridData>
								</commons:layoutData>
							</commons:TextField>
							<commons:Button text="Equipment">
								<commons:layoutData>
									<l:GridData span="L3 M3 S3"></l:GridData>
								</commons:layoutData>
							</commons:Button>
						</form:FormElement>
						<form:FormElement label="Function Location">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Button text="Create" press="toCreateFunctionalLoc">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Change">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Display">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Where Used">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Equipment">
							<form:fields>
								<commons:TextField>
									<commons:layoutData>
										<l:GridData span="L2 M2 S2"></l:GridData>
									</commons:layoutData>
								</commons:TextField>
								<commons:Button text="Create" press="toCreateEquipment">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Change">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Display">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
								<commons:Button text="Where Used">
									<commons:layoutData>
										<l:GridData span="L1 M1 S1"></l:GridData>
									</commons:layoutData>
								</commons:Button>
							</form:fields>
						</form:FormElement>
					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
			<form:layout>
				<form:ResponsiveGridLayout id="L1" columnsL="1"/>
			</form:layout>
		</form:Form>
		<table:Table>
			<table:title>
				<commons:TextView text="Sub-Items"></commons:TextView>
			</table:title>
			<table:columns>
				<table:Column>
					<commons:Label text="CU Number"></commons:Label>
				</table:Column>
				<table:Column>
					<commons:Label text="Description"></commons:Label>
				</table:Column>
				<table:Column>
					<commons:Label text="NR"></commons:Label>
				</table:Column>
				<table:Column>
					<commons:Label text="Quantity"></commons:Label>
				</table:Column>
			</table:columns>
		</table:Table>
		<commons:Button text="Add Item"></commons:Button>
		<commons:Button text="Delete Item"></commons:Button>
	</Panel>
	
</core:View>
